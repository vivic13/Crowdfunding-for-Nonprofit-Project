<div class="container text-center">
<h2>編輯帳戶資訊</h2>
</div>
<div class="container text-center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,class:"form-length" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(若沒有要更新密碼，請空白)</i><br />
    <%= f.password_field :password, autocomplete: "off",class:"form-length" %>
    <% if @minimum_password_length %>
      <br />
      <em>最短6字</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,class:"form-length"%>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(請輸入目前的密碼確認)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" ,class:"form-length"%>
  </div>

  <div class="form-group">
    <%= f.submit "Update" ,class:"btn-2nd"%>
  </div>
<% end %>
</div>


