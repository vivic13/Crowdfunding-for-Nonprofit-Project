<div class="container">
	<%= link_to	'回後台首頁', admin_products_path %>
</div>
<div class="container">
	<%= form_for([:admin, Npo.new]) do |f| %>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<div class="form-group">
			<%= f.label :code %>
			<%= f.text_field :code %>
		</div>
		<div class="form-group">
			<%= f.label :philosophy %>
			<%= f.text_area :philosophy %>
		</div>
		<%= f.submit class:"btn btn-default" %>
	<% end %>
</div>

<div class="container">
	<% @npos.each do |n| %>
		<table>
			<tr>
				<td>
					<%= n.name %>
				</td>
			</tr>
			<tr>
				<td>
					<%= n.code %>
				</td>
			</tr>
			<tr>
				<td>
					<%= n.philosophy %>
				</td>
			</tr>
			<tr>
				<td>
					<%= link_to "編輯", edit_admin_npo_path(n) %>
					<%= link_to "刪除", admin_npo_path(n),method: :delete, data:{ confirm: "Are you sure?"}  %>

				</td>
			</tr>
			

		</table>
	<% end %>
</div>