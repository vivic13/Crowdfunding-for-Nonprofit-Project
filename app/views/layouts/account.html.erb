<!DOCTYPE html>
<html>
<head>
    <title>My Profile</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %> 
  <div class="container text-center">
    <%= link_to("我喜歡的故事", account_stories_path ,class: "btn btn-default") %> 
    <%= link_to("我捐贈的專案", account_project_donations_path,class: "btn-default") %>
    <%= link_to '返回首頁', stories_path,class: "btn-default" %>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= yield %>
      </div>
    </div>
  </div>

  <nav class="nav navbar-default navbar-fixed-top">
      <div class="navbar-header">
        <a class="navbar-brand navbar-left" href="#">
          <img alt="Brand" src="...">
        </a>
      </div>
      <div class="container-fluid">

        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span> 
        </button>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li> <%= link_to '我們在做什麼', aboutus_path%></li>
          <li> <%= link_to '呆丸各角落', stories_path%></li>
          <li> <%= link_to '贊助支持', projects_path %></li>
          <li><%= link_to '聯絡我們', contactus_path %></li>
        </ul>

        <p class="login navbar-text navbar-right"> 
          <% if current_user %> 
            <%= current_user.name %>
            <%= link_to('登出', destroy_user_session_path, :method => :delete,class:"btn-default") %>
            <%= link_to('更改資料', edit_registration_path(:user),class:"btn-default") %>   
          <% else %>
            <%= link_to('註冊', new_registration_path(:user),class:"btn-default") %>
            <%= link_to('登入', new_session_path(:user),class:"btn-default") %>
            <%= link_to "FB登入", user_facebook_omniauth_authorize_path ,class:"btn-default"%>
          <% end %>
          </p>

      </div>
    </div>

  </nav>
</body>
</html>