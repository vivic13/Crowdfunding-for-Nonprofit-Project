<div class="container text-center">

	<%= form_for ([:admin,Tag.new])  do |f| %> 
		<%= f.label :name, "Tag名稱" %>
		 <%= f.text_field :name ,:required => 'required'%>

		<%= f.submit class:"btn btn-default" %> 
	<% end %>

</div>
<div class="container text-center">
	<% @tags.each do |t| %>
		<i class="fa fa-tag " aria-hidden="true"><%= t.name%> 目前使用次數：<%= t.story_tags.count %> </i>
		<%= link_to '刪除', admin_tag_path(t),method: :delete, data:{ confirm: "Are you sure?"} ,class:"btn btn-default" %><br>
						
	<% end %>
		
</div>



