<div class="container text-center">
	<h1>所有故事</h1>
</div>
<div class="container text-center">
	<%= link_to "新增故事", new_admin_story_path,class:"btn btn-default" %>
</div>
<div class="container">
	<% @stories.each do |s| %>
		<div class="col-md-4 text-center">
			<table class="table table-bordered">		
				<tr>
					<th class="table-info text-center">
					  標題: <%= truncate(s.title, length: 11)%>	/ 作者: <%= s.try(:author)%>
					</th>
				</tr> 
				<tr>
				  <td>
					  地點：<%= truncate(s.location, length: 11)%> 
				  </td>
				</tr>
				<tr>
				  <td>
					  發布時間：<%= s.created_at %> 
				  </td>
				</tr>
				<tr>
				  <td>
					  是否公開：<%= s.is_public %>
				  </td>
				</tr>
				<tr>
				  <td>
					  <%= link_to "Detail",admin_story_path(s)%>
				  </td>
				</tr>
		
			</table>
		</div>
		
	<% end %>
</div>