<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>    
  </head>

  <body>
    <div class="navbar navbar-default navbar-fixed-top">
    	<p class="login"> 哈囉! 
        <% if current_user %> 
         	<%= current_user.name %>
          <%= link_to('登出', destroy_user_session_path, :method => :delete) %>
          <%= link_to('更改資料', edit_registration_path(:user)) %>
  	    <% else %>
  	      <%= link_to('註冊', new_registration_path(:user)) %>
  	      <%= link_to('登入', new_session_path(:user)) %>
          <%= link_to "登入 Facebook", user_facebook_omniauth_authorize_path %>
  	    <% end %>
      </p>
      <p style="color: green"><%= flash[:notice] %></p>
      <p style="color: red"><%= flash[:alert] %></p>
        <nav class="nav navbar-default">
          <div class="container-fluid">
             <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span> 
                  </button>
            <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
              <li> <%= link_to '首頁', root_path%></li>
              <li> <%= link_to '關於我們', aboutus_path %></li>
              <li><%= link_to '聯絡我們', contactus_path %></li>          
            </ul>
          </div>
          </div>

        </nav>
    </div>
    <%= yield %>
  </body>
</html>

<script>
      window.fbAsyncInit = function() {
      FB.init({
        appId      : '481652665500095',
        xfbml      : true,
        version    : 'v2.9'
        });
      FB.AppEvents.logPageView();
      };

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "//connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));
    </script>
