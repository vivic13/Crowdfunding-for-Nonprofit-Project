<h1>專案詳細資訊</h1>
	
<div class="container">
	專案名稱:<%= @project.name %> <br>	
	專案內容:<%= @project.content %><br>
	總共需募資金額: <%= @project.total_amount %><br>
	已募資金額: <%= @project.donation_amount %><br>
 	募資進度: <%= @project.progress %>%<br> 

</div>
<div class="container">
<% if @project.done == true ||  DateTime.now > @project.due_date  %>
	<%= link_to '已結束募資，回到專案頁面', projects_path ,class:"btn btn-default"%>
	
<% else %>
	<%= link_to '贊助', new_project_donation_path(@project),class:"btn btn-default" %>
	<%= link_to '回到專案頁面', projects_path ,class:"btn btn-default"%>
<% end %>

</div>




