<div class="container text-center">
		<div class="container">
		<%= link_to("我的故事紀錄", account_stories_path ,class:"btn-2nd") %> 
		<%= link_to '新增故事', new_account_story_path,class:"btn-2nd" %>
		<%= link_to("我的按讚紀錄", liked_account_stories_path ,class:"btn-2nd") %> 
    <%= link_to("我的捐贈記錄", account_project_donations_path, class:"btn-2nd") %>   
    </div>
</div>
<div class="container text-center">
  <h4><%= current_user.name%>的捐贈記錄</h4>
</div>


<div class="container">
	<% @donations.each do |donation| %>
		<div class="col-md-4 text-center">
			<table class="table table-bordered">		
				<tr>
					<th class="table-info text-center">
					  捐贈的專案: <%= donation.project.try(:name)%>	
					</th>
				</tr> 
				<tr>
				  <td>
					  捐贈金額：NT$<%= donation.amount %>
				  </td>
				</tr>
				<tr>
				  <td>
					  付款狀態：<%= donation.payment_status %>
				  </td>
				</tr>
				<tr>
				  <td>
					  付款方式：<%= donation.payment_method %>
				  </td>
				</tr>
				<tr>
				  <td>
					  <%= link_to "捐贈記錄",account_project_donation_path(donation)%>
				  </td>
				</tr>
		
			</table>
		</div>
	<% end %>
</div>