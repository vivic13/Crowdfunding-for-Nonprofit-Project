<div class="container text-center">
		<div class="container">
		<%= link_to("我的故事紀錄", account_stories_path ,class:"btn-2nd") %>&nbsp;
		<%= link_to '上傳故事', new_account_story_path,class:"btn-2nd" %>&nbsp;
		<%= link_to '我的專案記錄',new_account_story_path,class:"btn-2nd" %>&nbsp;
		<%= link_to '發起專案',new_account_story_path, class:"btn-2nd" %> &nbsp;
		<%= link_to("我的按讚紀錄",liked_account_stories_path ,class:"btn-2nd") %> &nbsp;
    <%= link_to("我的捐贈記錄", account_project_donations_path, class:"btn-2nd") %> 
    </div>
</div>
<div class="container text-center">
  <h4><%= current_user.name%> <i class="fa fa-info-circle" aria-hidden="true"></i> 捐贈記錄</h4>
</div>


<div class="container">
	<% @donations.each do |donation| %>
		<div class="col-md-6 text-center">
			<table class="table table-bordered">		
				<tr>
					<th class="table-info text-center">
					  <i class="fa fa-info-circle" aria-hidden="true">捐贈的專案: <%= donation.project.try(:name)%>	</i> 
					</th>
				</tr> 
				<tr>
				  <td>
				  	<i class="fa fa-list-alt" aria-hidden="true"></i> <br>
					  <i class="fa fa-usd" aria-hidden="true"></i>捐贈金額：NT$<%= donation.amount %> <br>
					  <i class="fa fa-usd" aria-hidden="true"></i>付款狀態：<%= donation.payment_status %>
				  </td>
				</tr>
				
				<tr>
				  <td>
					  <%= link_to "查看",account_project_donation_path(donation), class:"btn-2nd"%>
				  </td>
				</tr>
		
			</table>
		</div>
	<% end %>
</div>