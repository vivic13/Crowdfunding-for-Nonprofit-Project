<div class="container text-center">
	<h1>呆丸各角落故事</h1>
	<hr class="short">
</div>
<div class="container text-center">
	<%= link_to "刪除", admin_story_path(@story) ,method: :delete, data:{ confirm: "Are you sure?"} ,class: "btn btn-default"%>
	<%= link_to "編輯", edit_admin_story_path(@story) ,class:"btn btn-default"%>
	<%= link_to "返回所有故事列表", admin_stories_path ,class:"btn btn-default"%>
</div>
<section>
	<div class="container">
	  <div class="row">
	    <div class="col-sm-12">
	      <h2>故事資訊</h2>
	      <ul>
            <li> 時間：<%= @story.story_time %> </li>
            <li> 地點：<%= @story.location %> </li>
            <li>是否公開：<%= @story.is_public %></li>
	        <li>是否置頂：<%= @story.priority %></li>
          </ul>
	    </div>
			<% if @story.youtube_link.present? %>
	    	<iframe id="ytplayer" type="text/html" width="640" height="360" src= "<%= @link %>" frameborder="0"></iframe>
      <% end %>
      <div class="col-sm-12">
        <h2>故事照片集</h2>
        <% @story.photofiles.each do|p| %>
	        <%= link_to image_tag(p.image.url(:medium)) ,class:"img-responsive" %>
        <% end %>
      </div>
			
	    <div class="col-sm-12">
	      <h2> 故事標題：<%= @story.title %> </h2>
	      <% if @story.tags %>
	        <h2>標籤：<% @story.tags.each do|t| %> 
			      <%= t.name %> 
		    <%end%>	
	        </h2>
	      <% end %>
	      <div style="height:100px;">
	        <p>
	          <h2>內容:</h2><%= @story.content %>
	        </p>
	      </div>
	    </div>	    
	  </div>
	</div>
</section>


<script type="text/javascript">
 $("document").ready(function(){
	$("input:checkbox").click(function(){
    if ($("input:checkbox:checked").length > 3){
      alert('限制選取3項');}
	});

});

  // Load the IFrame Player API code asynchronously.
  var tag = document.createElement('script');
  tag.src = "https://www.youtube.com/player_api";
  var firstScriptTag = document.getElementsByTagName('script')[0];
  firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

  // Replace the 'ytplayer' element with an <iframe> and
  // YouTube player after the API code downloads.
  var player;
  function onYouTubePlayerAPIReady() {
    player = new YT.Player('ytplayer', {
      height: '360',
      width: '640',
      videoId: 'M7lc1UVf-VE'
    });
  }


</script>