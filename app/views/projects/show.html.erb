<h1>專案詳細資訊</h1>
	
<div class="container">
	<h3>專案名稱:<%= @project.name %></h3>  <br>	
	<h3> 專案內容:<%= sanitize(@project.content) %> </h3><br>
	<h3>總共需募資金額: <%= @project.total_amount %> </h3><br>
	<h3>已募資金額: <%= @project.donation_amount %></h3><br>
	<h3>募資進度: <%= @project.progress %>%</h3><br> 
	
 

</div>
<div class="container">
<% if @project.done == true ||  DateTime.now > @project.due_date  %>
	<%= link_to '已結束募資，回到專案頁面', projects_path ,class:"btn btn-default"%>
	
<% else %>
	<%= link_to '贊助', new_project_donation_path(@project),class:"btn btn-default" %>
	<%= link_to '回到專案頁面', projects_path ,class:"btn btn-default"%>
<% end %>

</div>




