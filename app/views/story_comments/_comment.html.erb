<div id="comment-<%= c.id %>">
  <br>
  <i class="fa fa-user-o" aria-hidden="true">&nbsp;<%= c.commenter %></i>&nbsp;&nbsp;
    <%= time_ago_in_words(c.created_at)%>
 	<div class="container">
    <div class="row">
      <div class="col-sm-12" > 
 	      <div style="width: 100%;"><%= c.comment_body %> </div>
 	 
 	    </div>
 	  </div>
 	</div>

 	<div id="image">
		<%# if c.image_file_name %>
	 		<%#= link_to image_tag(c.image.url(:medium)), c.image.url %>
		<%# end %>

	</div>
		<% if c.commenter == current_user.name ||current_user.role == "admin" %>
			<%= link_to '刪除', story_comment_path(@story,c) ,method: :delete,method: :delete, data:{ confirm: "確定要刪除留言嗎?"},:remote => true %>
		<% end %>
  </div>
  <hr class="short" style="border-top: 1px dotted #8c8b8b;">



