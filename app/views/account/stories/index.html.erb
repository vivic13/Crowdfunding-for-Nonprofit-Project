<div class="container text-center">
		<%= link_to("我的故事紀錄", account_stories_path ,class:"btn btn-default") %> 
		<%= link_to("我的按讚紀錄", liked_account_stories_path ,class:"btn btn-default") %> 
    <%= link_to("我的捐贈記錄", account_project_donations_path, class:"btn-default") %>
    <%= link_to '返回首頁', stories_path,class:"btn-default" %>
    <%= link_to "新增故事", new_account_story_path,class:"btn btn-default" %>
</div>


<div class="container">
	<% @stories.each do |s| %>
		<div class="col-md-4 text-center">
			<table class="table table-bordered">		
				<tr>
					<th class="table-info text-center">
					  標題: <%= s.title%>	/ 作者: <%= s.try(:author)%>
					</th>
				</tr> 
				<tr>
				  <td>
					  時間：<%= s.story_time %> / 地點：<%= s.location %>
				  </td>
				</tr>
				<tr>
				  <td>
					  是否公開：<%= s.is_public %>
				  </td>
				</tr>
				<tr>
				  <td>
					  <%= link_to "Detail",account_story_path(s)%>
				  </td>
				</tr>
		
			</table>
		</div>
	<% end %>
</div>