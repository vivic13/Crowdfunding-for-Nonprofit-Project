<div class="container text-center">
		<div class="container">
		<%= link_to("我的故事紀錄", account_stories_path ,class:"btn-2nd") %>&nbsp;
		<%= link_to '上傳故事', new_account_story_path,class:"btn-2nd" %>&nbsp;
		<%= link_to '我的專案記錄',new_account_story_path,class:"btn-2nd" %>&nbsp;
		<%= link_to '發起專案',new_account_story_path, class:"btn-2nd" %> &nbsp;
		<%= link_to("我的按讚紀錄",liked_account_stories_path ,class:"btn-2nd") %> &nbsp;
    <%= link_to("我的捐贈記錄", account_project_donations_path, class:"btn-2nd") %> 
    </div>
</div>
<div class="container text-center">
  <h4><%= current_user.name%>的故事</h4>
</div>


<div class="container text-center">
<% @stories.each do |s| %>
	<div class="col-md-12">
	<div class="col-md-6">
		<% if s.photofiles.present? %>
		<%= link_to image_tag(s.photofiles.first.image.url,class:"story")  %>
		<% else %>
			<%= image_tag "donation.png",class:"story"%>
		<% end %>
	</div>					
	<div class="col-md-6">
		<h3><%=truncate(s.title, length: 20)%></strong></h3>	
		
		<br>
		<%= sanitize(s.content, :tags=>[]).truncate(200, :separator => " ").html_safe	 %>	<br><br>
		<%= link_to "查看",story_path(s),class:"btn-2nd" %>	<br><br>	
	</div>
	</div>
<% end %>			
</div>

<style>
	.story{
		height: 300px;
	}
</style>
